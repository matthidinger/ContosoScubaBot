{
    "type": "message",
    "attachments": [
        {
            "contentType": "application/vnd.microsoft.card.adaptive",
            "content": {
                "type": "AdaptiveCard",
                "version": "1.0",
                "body": [
                    {
                        "type": "TextBlock",
                        "text": "Your scuba class comes with a delicious lunch between dives. Do you have any meal preferences?",
                        "wrap": true
                    },
                    {
                        "type": "Input.ChoiceSet",
                        "id": "mealOptions",
                        "isMultiSelect": true,
                        "choices": [
                            {
                                "title": "Vegetarian",
                                "value": "Vegetarian"
                            },
                            {
                                "title": "Vegan",
                                "value": "Vegan"
                            },
                            {
                                "title": "Gluten-free",
                                "value": "Gluten-free"
                            },
                            {
                                "title": "Peanut allergy",
                                "value": "Peanut"
                            }
                        ]
                    }
                ],
                "actions": [
                    {
                        "type": "Action.Submit",
                        "title": "Next"
                    }
                ]
            }
        }
    ]
}